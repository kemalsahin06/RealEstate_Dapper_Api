@model List<ResultProductDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan  Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col"> İlan Başlıgı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                                <th scope="col">Günün Fırsatı</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    count++;
                                    <th scope="row">@count</th>
                                    <td>@item.title</td>
                                    <td>@item.city</td>
                                    <td>@item.district</td>
                                    <td>@item.categoryName</td>
                                    <td>@item.price</td>
                                    <td>@item.Type</td>
                                    <td><a href="/Products/DeleteProduct/@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Products/UpdateProduct/@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Products/ProductDetail/@item.productID" class="btn btn-outline-primary">Sitede Gör</a></td>
                                    <td>
                                        @if (item.DealOfTheDay == true)
                                        {
                                            <a href="/Products/ProductDealOfTheDayStatusChangeToFalse/@item.productID" class="btn btn-outline-secondary">Pasif Yap</a>
                                        
                                        }
                                        @if (item.DealOfTheDay == false)
                                        {
                                            <a href="/Products/ProductDealOfTheDayStatusChangeToTrue/@item.productID" class="btn btn-outline-warning">Aktif Yap</a>

                                        }
                                    </td>
                                </tr>
                            }


                        </tbody>

                    </table>
                    <td><a href="/Products/CreateProduct/" class="btn btn-outline-info">Yeni İlan Girişi</a></td>

                </div>
            </div>
        </div>
    </div>
</div>

